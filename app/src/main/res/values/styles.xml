<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppBase" parent="@android:style/Theme.Light.NoTitleBar"/>

    <style name="Theme.App" parent="@style/Theme.AppBase">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorForeground">@color/text</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:buttonStyle">@style/DefaultButton</item>
        <item name="android:editTextStyle">@style/DefaultEditText</item>
        <item name="android:textViewStyle">@style/DefaultTextView</item>
    </style>

    <!-- button -->
    <style name="DefaultButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/btn_default_text</item>
        <item name="android:background">@drawable/btn_default_bg</item>
    </style>

    <style name="DefaultButton.Standard" parent="@style/DefaultButton">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="DefaultButton.Small" parent="@style/DefaultButton">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/space_normal</item>
    </style>

    <style name="ActiveButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/btn_active_text</item>
        <item name="android:background">@drawable/btn_active_bg</item>
    </style>

    <style name="ActiveButton.Standard" parent="@style/ActiveButton">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="ActiveButton.Small" parent="@style/ActiveButton">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/space_normal</item>
    </style>

    <!-- text view -->
    <style name="DefaultTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DefaultTextView.Standard" parent="@style/DefaultTextView">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <!-- edit view -->
    <style name="DefaultEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:background">@drawable/box_editview_default</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:padding">@dimen/space_normal</item>
    </style>

    <style name="DefaultEditText.Standard" parent="@style/DefaultEditText">
        <item name="android:height">@dimen/edittext_height</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <!-- spinner -->
    <style name="DefaultSpinner" parent="@android:style/Widget.Spinner">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:background">@drawable/box_editview_default</item>
        <item name="android:padding">@dimen/space_normal</item>
    </style>

    <style name="DefaultSpinner.Standard" parent="@style/DefaultSpinner">
        <item name="android:height">@dimen/spinner_height</item>
        <item name="android:layout_height">@dimen/spinner_height</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <!-- dialog -->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog"/>

    <style name="DefaultBaseDialog" parent="@style/BaseDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="BaseDialogButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@drawable/btn_dialog_base_text</item>
        <item name="android:background">@drawable/btn_dialog_base_bg</item>
        <item name="android:layout_marginLeft">@dimen/space_normal</item>
        <item name="android:layout_marginRight">@dimen/space_normal</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- line horizontal 1px-->
    <style name="LineH1PX">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/border</item>
        <item name="android:background">@color/border</item>
    </style>

    <!-- topbar -->
    <style name="TopbarImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">@dimen/button_topbar</item>
        <item name="android:layout_height">@dimen/button_topbar</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TopbarDefaultButton" parent="@style/DefaultButton">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:paddingLeft">@dimen/space_huge</item>
        <item name="android:paddingRight">@dimen/space_huge</item>
    </style>

    <style name="TopbarActionButton" parent="@style/ActiveButton">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:paddingLeft">@dimen/space_huge</item>
        <item name="android:paddingRight">@dimen/space_huge</item>
    </style>

    <!-- customer -->
    <style name="TabMain">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/space_large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/tab_main</item>
    </style>

    <style name="Theme.Pager" parent="@style/Theme.App">
        <item name="TabPager">@style/Widget.TabPager</item>
    </style>

    <style name="Widget"/>

    <style name="Widget.TabPager" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_calendar</item>
        <item name="android:paddingBottom">@dimen/space_large</item>
        <item name="android:paddingTop">@dimen/space_large</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/tab_calendar</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- loading -->
    <style name="LoadingFlower">
        <item name="android:indeterminateDrawable">@drawable/loading_flower</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <!-- home icons -->
    <style name="HomeBottomTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">@dimen/space_normal</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingTop">@dimen/space_large</item>
        <item name="android:paddingBottom">@dimen/space_large</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- personal -->
    <style name="PersonalListLeftTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">@dimen/space_large</item>
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:paddingTop">@dimen/space_large</item>
        <item name="android:paddingBottom">@dimen/space_large</item>
    </style>

    <style name="PersonalListRightTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">@dimen/space_large</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
</resources>