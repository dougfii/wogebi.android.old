<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

    <TextView
        android:id="@+id/dialog_download_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="@dimen/font_normal"/>

    <ProgressBar
        android:id="@+id/dialog_download_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_big"
        android:layout_below="@+id/dialog_download_message"
        android:layout_marginTop="@dimen/space_large"
        android:progressDrawable="@drawable/progressbar_download"/>

    <TextView
        android:id="@+id/dialog_download_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_download_bar"
        android:layout_marginTop="@dimen/space_normal"
        android:textSize="@dimen/font_normal"/>

    <TextView
        android:id="@+id/dialog_download_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_download_bar"
        android:layout_marginTop="@dimen/space_normal"
        android:textSize="@dimen/font_normal"/>
</RelativeLayout>