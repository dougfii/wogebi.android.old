<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_normal"
        android:background="@drawable/box_calendar_item"
        android:orientation="vertical"
        android:padding="@dimen/space_normal">

        <LinearLayout
            android:id="@+id/calendar_item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用　户："
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/calendar_item_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="创　建："
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/calendar_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_small"/>
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/space_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日　期："
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/calendar_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状　态："
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/calendar_item_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_small"/>
                </TableRow>

                <TableRow
                    android:layout_marginBottom="@dimen/space_normal"
                    android:layout_marginTop="@dimen/space_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客　户："
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/calendar_item_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人："
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/calendar_item_contacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_small"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <View style="@style/LineH1PX"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                android:text="谈何事："
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/calendar_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                android:lineSpacingMultiplier="1.3"
                android:textSize="@dimen/font_normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendar_item_panel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <View style="@style/LineH1PX"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                android:text="后　续："
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/calendar_item_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                android:lineSpacingMultiplier="1.3"
                android:textSize="@dimen/font_normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendar_item_panel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <View style="@style/LineH1PX"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_marginBottom="@dimen/space_normal"
                    android:layout_marginTop="@dimen/space_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="路　线："
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/calendar_item_walkway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="里　程："
                        android:textSize="@dimen/font_small"/>

                    <TextView
                        android:id="@+id/calendar_item_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_small"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendar_item_panel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <View style="@style/LineH1PX"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                android:text="备　注："
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/calendar_item_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_normal"
                android:lineSpacingMultiplier="1.3"
                android:textSize="@dimen/font_normal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>