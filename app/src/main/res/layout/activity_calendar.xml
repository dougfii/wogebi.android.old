<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <view
        android:id="@+id/calendar_topbar"
        class="com.dougfii.android.core.view.Topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <view
        android:id="@+id/calendar_tab"
        class="com.dougfii.android.core.view.pager.TabPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View style="@style/LineH1PX"/>

    <view
        android:id="@+id/calendar_pager"
        class="android.support.v4.view.ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>