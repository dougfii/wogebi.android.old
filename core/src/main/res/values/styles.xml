<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- button -->
    <style name="DefaultButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/btn_default_text</item>
        <item name="android:background">@drawable/btn_default_bg</item>
    </style>

    <style name="DefaultButton.Standard" parent="@style/DefaultButton">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="DefaultButton.Small" parent="@style/DefaultButton">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/space_normal</item>
    </style>

    <style name="ActiveButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/btn_active_text</item>
        <item name="android:background">@drawable/btn_active_bg</item>
    </style>

    <style name="ActiveButton.Standard" parent="@style/ActiveButton">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="ActiveButton.Small" parent="@style/ActiveButton">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/space_normal</item>
    </style>

    <!-- text view -->
    <style name="DefaultTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DefaultTextView.Standard" parent="@style/DefaultTextView">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <!-- dialog -->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />

    <style name="DefaultBaseDialog" parent="@style/BaseDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="BaseDialogButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@drawable/btn_dialog_base_text</item>
        <item name="android:background">@drawable/btn_dialog_base_bg</item>
        <item name="android:layout_marginLeft">@dimen/space_normal</item>
        <item name="android:layout_marginRight">@dimen/space_normal</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- loading -->
    <style name="Loading">
        <item name="android:indeterminateDrawable">@drawable/loading</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <!-- line horizontal 1px-->
    <style name="LineH1PX">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/border</item>
        <item name="android:background">@color/border</item>
    </style>

    <!-- topbar -->
    <style name="TopbarImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">@dimen/button_topbar</item>
        <item name="android:layout_height">@dimen/button_topbar</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TopbarDefaultButton" parent="@style/DefaultButton">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:paddingLeft">@dimen/space_huge</item>
        <item name="android:paddingRight">@dimen/space_huge</item>
    </style>

    <style name="TopbarActionButton" parent="@style/ActiveButton">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:paddingLeft">@dimen/space_huge</item>
        <item name="android:paddingRight">@dimen/space_huge</item>
    </style>

</resources>